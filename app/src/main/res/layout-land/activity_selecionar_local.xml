<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jaime.jaime.activity.SelecionarLocalActivity">

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Landscape Selecione o desejado:"
        android:textSize="24dp" />

    <RelativeLayout
        android:id="@+id/containerFragmentList"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv3" />

    <ScrollView
        android:id="@+id/containerFragmentDetalhe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv3"
        android:layout_toRightOf="@id/containerFragmentList" />


</RelativeLayout>
